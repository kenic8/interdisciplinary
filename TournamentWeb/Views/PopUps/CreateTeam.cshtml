@model TournamentWeb.Models.Teams

<div class="PopupBox">
    <h1>@TempData["id1"]</h1>
    <form  asp-action="Join" asp-route-id="@TempData["id1"]" asp-controller="Tournaments" method="post" enctype="multipart/form-data">

        <div class="form">
            <label asp-for="TeamName"> Team Name</label>
            <input asp-for="TeamName" />
            <div class="form">
                <label asp-for="TeamImageFile">Default file input example</label>
                <input asp-for="TeamImageFile" type="file">
            </div>

        </div>

        <button class="orangebutton" style="width:40%; margin-top:5%;"type="submit">Create</button>
    </form>
</div>

<style>
    .PopupBox {
        height: 350px;
        width: 600px;
        border-radius: 24px;
        background: #1F1F1F;
        position: absolute;
        transform: translate(-50%, -50%);
        left: 50%;
        top: 50%;
        padding:1%;
    }
</style>