@model TournamentWeb.Models.Teams

<div class="PopupBox">
    <h1>@TempData["id1"]</h1>
    <form asp-action="Join" asp-route-id="@TempData["id1"]" asp-controller="Tournaments" method="post" enctype="multipart/form-data">

        <div class="form-group">
            <label asp-for="TeamName"> Team Name</label>
            <input asp-for="TeamName" class="form-control" />
            <div class="form-group">
                <label asp-for="TeamImageFile" class="form-label">Default file input example</label>
                <input asp-for="TeamImageFile" class="form-control" type="file">
            </div>

        </div>

        <button type="submit" class="btn btn-primary">Create</button>
    </form>
</div>

<style>
    .PopupBox {
        height: 300px;
        width: 700px;
        border-radius: 24px;
        background: white;
        position: absolute;
        transform: translate(-50%, -50%);
        left: 50%;
        top: 50%;
    }
</style>