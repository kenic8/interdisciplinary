
@model Tournament
<div><h4>Create Tournament</h4></div>
<div asp-validation-summary=" All" class="text-danger"></div>


<form class="formouter" style="width:40%" asp-action="AddTournament" asp-controller="Tournament" method="post">
    
    <div>
        <label class="input" asp-for="TimeFrame"> Start Time</label>
        <input asp-for="TimeFrame" class="form-control" />
    </div>
    <div>
        <label  class="input" asp-for="TournamentName"></label>
        <input asp-for="TournamentName" class="form-control" />
    </div>

    <div >
        <label class="input"  asp-for="TournamentInfo"></label>
        <textarea asp-for="TournamentInfo" class="form-control"></textarea>
    </div>

    <button type="submit" class="btn btn-primary">Create</button>
    <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>




<style>
    .input{
        color:lightgray;
    }

</style>