
@model Tournament
@using Microsoft.AspNetCore.Identity;
<div class="bg-primary m-1 p-1 text-white"><h4>Create Tournament</h4></div>
<div asp-validation-summary=" All" class="text-danger"></div>



@inject SignInManager<AppUser> SignInManager
@inject UserManager<AppUser> UserManager



<form asp-action="AddTournament" asp-controller="Addtournament" method="post" enctype="multipart/form-data">

    <div class="form-group">
        <label asp-for="TimeFrame"> Start Time</label>
        <input asp-for="TimeFrame" class="form-control" />
        @*<span asp-validation-for="TimeFrame"></span>*@
    </div>
    <div class="form-group">
        <label asp-for="TournamentName"></label>
        <input asp-for="TournamentName" class="form-control" />
        @*<span asp-validation-for="TournamentName"></span>*@
    </div>

    <div class="form-group">
        <label asp-for="TournamentInfo"></label>
        <textarea asp-for="TournamentInfo" class="form-control"></textarea>
        @*<span asp-validation-for="TournamentInfo"></span>*@
    </div>

    <div class="form-group">
        <label asp-for="Bracketsize"></label>
        <input type="number" asp-for="Bracketsize" class="form-control">
        @*<span asp-validation-for="Bracketsize"></span>*@
    </div>

    <div class="form-group">
        <label asp-for="TournamentImageFile" class="form-label">Default file input example</label>
        <input asp-for="TournamentImageFile"class ="form-control" type="file">
    </div>

    <div class="form-group">
        <input type="hidden" asp-for="UserId" value="@UserManager.GetUserId(User)" class="form-control" />
    </div>


    <button type="submit" class="btn btn-primary">Create</button>
    <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>


