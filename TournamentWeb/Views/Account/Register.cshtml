@model TournamentWeb.Models.ViewModels.RegisterViewModel

<div asp-validation-summary="All" class="text-danger"></div>
<form asp-controller="Account" asp-action="Register" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="UserName"></label>
        <input asp-for="UserName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Password"></label>
        <input asp-for="Password" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="ConfirmPassword"></label>
        <input asp-for="ConfirmPassword" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="UserDiscord"></label>
        <input asp-for="UserDiscord" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="ProfileImageFile" class="form-label">Add new profile picture</label>
        <input asp-for="ProfileImageFile" class="form-control" type="file">
        <label hidden asp-for="ProfileImage"></label>
    </div>

    <button type="submit" class="btn btn-primary">Create</button>
    <a asp-controller="Account" asp-action="Logout" class="btn btn-secondary">Cancel</a>
</form>