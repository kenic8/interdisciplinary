@model TournamentWeb.Models.ViewModels.LoginViewModel

<div class="formouter">
    <div class="textlogin"><h4>Log In</h4></div>
    <div asp-validation-summary="All"></div>
    <form asp-action="Login" asp-controller="Account" method="post">
        <input type="hidden" name="returnUrl" value="@ViewBag.returnUrl" />
        <div class="form">
            <label asp-for="UserName"></label>
            <input class="formtime username" asp-for="UserName" />
        </div>
        <div class="form">
            <label asp-for="Password"></label>
            <input class="formtime" asp-for="Password" />
        </div>
        <div class="textlogin">
            <p>Did you forget your login?<a href="">Click here</a></p>
        </div>
        <button class="orangebutton" type="submit">Log In</button>
    </form>
</div>


