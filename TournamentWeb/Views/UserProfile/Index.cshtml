@model TournamentWeb.Models.ViewModels.UserProfileViewModel
<style>
    img {
        height: 200px;
        width: auto;
    }

    #profile {
        text-align: center;
    }
</style>

<button onclick="hidehow()">Show Tournaments</button>
<div class="flex-View">
    <div class="side" id="side">
        @await Component.InvokeAsync("UserTournaments")
    </div>
    <div class="main">

        <div id="profile" class=" m-1 p-1">
            <h1> THis is the profile page!</h1>
            @if (Model.ProfileImage == null)
            {
                <img src="~/images/profile/default-user-icon.jpg" /><br />
            }
            else
            {
                <img src="~/images/profile/@Model.ProfileImage" alt="Alternate Text" /><br />
            }

            username
            <h4>@Model.UserName</h4>

            points
            <h4> @Model.Points</h4>
            discord
            <h4> @Model.UserDiscord </h4>
            email
            <h4>@Model.Email</h4>
            <a asp-controller="UserProfile" asp-action="Edit" class="btn btn-primary">Edit Profile</a> <br />

            <form asp-action="Delete">
                <input type="hidden" name="Id"
                       value="@Model.Id" />
                <input type="hidden" name="returnUrl"
                       value="@Model.ReturnUrl" />
                <button type="submit" class="btn m-1 btn-danger"
                        onclick="return confirm('Are you sure you want to delete your account?')">
                    Delete
                </button>
            </form>
        </div>
    </div>




    <script>

        function hidehow() {
            var x = document.getElementById("side")
            if (x.style.display === "none") {
                x.style.display = "block";
            } else {
                x.style.display = "none";
            }
        }
    </script>



    <style>
        button:hover {
            color: orange;
        }

        .flex-View {
            width: 100%;
            height: 100vh;
            display: flex;
            flex-direction: row;
            flex-wrap: nowrap;
        }

            .flex-View > .side {
                width: 20%;
                display: none;
            }

            .flex-View > .main {
                background-color: red;
                flex-grow: 1;
                height: auto;
            }

        #profile {
            text-align: center;
        }
    </style>
